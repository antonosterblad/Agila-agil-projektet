<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="400dp"
              android:id="@+id/popup"
              android:layout_height="300dp"
              android:background="@drawable/popup_background"
              android:orientation="vertical"
              android:weightSum="1"
              android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Extra hjälp med monteringen"
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/ARHelp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="67dp"
            android:background="@android:color/transparent"
            android:padding="30dp"
            android:src="@drawable/icon_3d_scan"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Kolla om du är klar med steget"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/ARCheckComplete"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="67dp"
            android:background="@android:color/transparent"
            android:padding="30dp"
            android:src="@drawable/ic_action_done_before"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Behöver du mer hjälp?"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/tutorialButton"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="67dp"
            android:background="@android:color/transparent"
            android:padding="30dp"
            android:src="@android:drawable/ic_menu_help"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>



