<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/kritter_not_vector"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/steps"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:weightSum="7"
            tools:context=".StepByStepFragment">

            <Button
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:id="@+id/step0"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:background="@color/grey" />

            <Button
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:id="@+id/step1"
                android:layout_weight="1"
                android:background="@color/greyOpacity"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:id="@+id/step2"
                android:layout_weight="1"
                android:background="@color/greyOpacity"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:id="@+id/step3"
                android:layout_weight="1"
                android:background="@color/greyOpacity"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:id="@+id/step4"
                android:layout_weight="1"
                android:background="@color/greyOpacity"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:id="@+id/step5"
                android:layout_weight="1"
                android:background="@color/greyOpacity"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/step6"
                android:layout_weight="1"
                android:background="@color/greyOpacity"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prevStep"
            android:id="@+id/prevBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/done_before"
            android:id="@+id/completedStepButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nextStep"
            android:id="@+id/nextBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</RelativeLayout>